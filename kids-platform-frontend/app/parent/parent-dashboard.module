.page {
  position: relative;
  min-height: 100vh;
  color: #fff;
  overflow: hidden;
  font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
}

.bg {
  position: absolute;
  inset: 0;
  background-image: url("/bg/space.jpg"); /* поклади фон у /public/bg/space.jpg */
  background-size: cover;
  background-position: center;
  filter: saturate(1.1);
  transform: scale(1.02);
}

.overlay {
  position: absolute;
  inset: 0;
  background: radial-gradient(60% 60% at 70% 20%, rgba(150, 110, 255, 0.25), transparent 60%),
    linear-gradient(to bottom, rgba(10, 6, 20, 0.78), rgba(10, 6, 20, 0.82));
}

.header {
  position: relative;
  z-index: 2;
  padding: 18px 16px;
}

.headerInner {
  max-width: 1100px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;

  padding: 14px 18px;
  border-radius: 14px;
  border: 1px solid rgba(255, 255, 255, 0.14);
  background: rgba(40, 26, 70, 0.35);
  backdrop-filter: blur(10px);
  box-shadow: 0 14px 40px rgba(0, 0, 0, 0.35);
}

.headerTitle {
  font-weight: 700;
  letter-spacing: 0.3px;
  opacity: 0.95;
}

.logoutBtn {
  border: 1px solid rgba(255, 255, 255, 0.2);
  background: rgba(255, 255, 255, 0.08);
  color: white;
  padding: 10px 14px;
  border-radius: 12px;
  cursor: pointer;
}
.logoutBtn:hover {
  background: rgba(255, 255, 255, 0.12);
}

.main {
  position: relative;
  z-index: 2;
  max-width: 1100px;
  margin: 0 auto;
  padding: 10px 16px 60px;
}

.welcome {
  text-align: center;
  font-size: clamp(28px, 3.2vw, 44px);
  margin: 18px 0 18px;
  text-shadow: 0 8px 26px rgba(0, 0, 0, 0.55);
}

.alerts {
  display: grid;
  gap: 10px;
  max-width: 800px;
  margin: 0 auto 18px;
}
.err,
.msg {
  border-radius: 14px;
  padding: 12px 14px;
  border: 1px solid rgba(255, 255, 255, 0.14);
  background: rgba(20, 12, 40, 0.45);
  backdrop-filter: blur(8px);
}
.err {
  border-color: rgba(255, 80, 80, 0.35);
}
.msg {
  border-color: rgba(120, 255, 180, 0.25);
}

.panel {
  border-radius: 22px;
  border: 1px solid rgba(255, 255, 255, 0.14);
  background: rgba(25, 14, 50, 0.45);
  backdrop-filter: blur(10px);
  box-shadow: 0 18px 60px rgba(0, 0, 0, 0.45);
  padding: 18px;
}

.cards {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 16px;
}

@media (max-width: 980px) {
  .cards {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
}
@media (max-width: 640px) {
  .cards {
    grid-template-columns: 1fr;
  }
}

.card {
  border-radius: 18px;
  border: 1px solid rgba(255, 255, 255, 0.12);
  background: rgba(40, 28, 80, 0.35);
  padding: 14px;
  box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.05);
}

.cardTop {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 10px;
}

.avatarWrap {
  width: 72px;
  height: 72px;
  border-radius: 999px;
  padding: 4px;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.35), rgba(255, 255, 255, 0.05));
  border: 1px solid rgba(255, 255, 255, 0.18);
  overflow: hidden;
}
.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 999px;
  user-select: none;
}

.childName {
  font-size: 22px;
  font-weight: 800;
  letter-spacing: 0.2px;
}

.ageLine {
  opacity: 0.85;
  font-size: 13px;
  margin: 2px 0 12px;
}

.greenBtn {
  width: 100%;
  border: 1px solid rgba(120, 255, 180, 0.25);
  background: linear-gradient(to bottom, rgba(90, 210, 120, 0.95), rgba(40, 160, 90, 0.95));
  color: #06220f;
  font-weight: 800;
  padding: 12px 12px;
  border-radius: 14px;
  cursor: pointer;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.35);
}
.greenBtn:hover {
  filter: brightness(1.03);
}

.rowBtns {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 10px;
  margin-top: 10px;
}

.purpleBtn {
  border: 1px solid rgba(255, 255, 255, 0.16);
  background: rgba(140, 95, 255, 0.25);
  color: #fff;
  font-weight: 700;
  padding: 10px 10px;
  border-radius: 14px;
  cursor: pointer;
}
.purpleBtn:hover {
  background: rgba(140, 95, 255, 0.32);
}

.addChildArea {
  display: flex;
  justify-content: center;
  margin-top: 16px;
}

.addChildBtn {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  border-radius: 16px;
  padding: 12px 18px;
  border: 1px solid rgba(255, 255, 255, 0.16);
  background: rgba(140, 95, 255, 0.28);
  color: white;
  font-weight: 900;
  cursor: pointer;
  box-shadow: 0 14px 38px rgba(0, 0, 0, 0.4);
}
.addChildBtn:hover {
  background: rgba(140, 95, 255, 0.34);
}
.plus {
  font-size: 18px;
  line-height: 1;
}

.createBox {
  margin-top: 18px;
  border-radius: 22px;
  border: 1px solid rgba(255, 255, 255, 0.14);
  background: rgba(25, 14, 50, 0.45);
  backdrop-filter: blur(10px);
  box-shadow: 0 18px 60px rgba(0, 0, 0, 0.45);
  padding: 16px;
}

.createTitle {
  font-weight: 900;
  font-size: 18px;
  margin-bottom: 12px;
}

.formRow {
  display: grid;
  grid-template-columns: 1.4fr 0.8fr 0.6fr;
  gap: 10px;
}

@media (max-width: 720px) {
  .formRow {
    grid-template-columns: 1fr;
  }
}

.input,
.select {
  border-radius: 14px;
  padding: 12px 12px;
  border: 1px solid rgba(255, 255, 255, 0.16);
  background: rgba(255, 255, 255, 0.08);
  color: white;
  outline: none;
}
.input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.primaryBtn {
  border-radius: 14px;
  border: 1px solid rgba(255, 255, 255, 0.14);
  background: rgba(255, 255, 255, 0.14);
  color: white;
  font-weight: 800;
  cursor: pointer;
  padding: 12px 12px;
}
.primaryBtn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.inviteBox {
  margin-top: 14px;
  border-radius: 18px;
  padding: 14px;
  border: 1px dashed rgba(255, 255, 255, 0.26);
  background: rgba(0, 0, 0, 0.18);
}
.inviteTitle {
  font-weight: 800;
  margin-bottom: 6px;
}
.inviteCode {
  font-size: 28px;
  letter-spacing: 4px;
  font-weight: 900;
}
.inviteHint {
  opacity: 0.8;
  font-size: 12px;
  margin-top: 6px;
}

.createHeader {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
  margin-bottom: 12px;
}

.closeBtn {
  border: 1px solid rgba(255, 255, 255, 0.16);
  background: rgba(255, 255, 255, 0.08);
  color: white;
  width: 38px;
  height: 38px;
  border-radius: 12px;
  cursor: pointer;
}
.closeBtn:hover {
  background: rgba(255, 255, 255, 0.12);
}
